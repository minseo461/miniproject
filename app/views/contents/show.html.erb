<h1>Contents#show</h1>
<p>Find me in app/views/contents/show.html.erb</p>

<h2>
    제목:<%= @content.title %>
</h2>
<p>
    내용:<%= simple_format(@content.body) %>
</p>

<% @content.comments.each do |comment| %>
    <p><%= comment.body %></p>
<% end %>

<%= form_for [@content, Comment.new] do |f|%>
    <%= f.text_area :body %>
    <%= f.submit %>
<%end%>

 <%= link_to '홈으로', contents_path %>