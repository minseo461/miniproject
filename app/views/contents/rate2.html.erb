후기 작성
<br><h2>
    제목:<%= @content.title %>
</h2>
<div class=wholebox>
    <p>
    <%= simple_format(@content.body) %>
</p>


<br>
---------------후기----------------<br>

<% @content.rate2s.each do |rate| %>
    <%= rate.user.realname %>(<%= rate.user.stringid %>)님:
    <%= rate.title %><br>
    <%= rate.body %>
    
    <% if can? :destroy, rate %>
    <%= link_to '삭제하기', [rate.content, rate], method: :delete, 
        data:{confirm:'정말 삭제하시겠습니까?'} %><br>
    <%end%>
<% end %>
<% if @current_user!=nil %>
<%= form_for [@content, Rate2.new] do |f|%>
    <%= f.text_field :title %><br>
    <%= f.text_area :body %>
    <%= f.submit '후기 등록'%>
<%end%>
<%end%>
<br>
<%=link_to '홈으로', contents_path%>
</div>