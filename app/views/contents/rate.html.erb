<% @content.rates.each do |rate| %>
    <%= rate.user.realname %>(<%= rate.user.stringid %>)님:
    <%= rate.title %><br>
    <%= rate.body %>
    
    <% if can? :destroy, rate %>
    <%= link_to '삭제하기', [rate.content, rate], method: :delete, 
        data:{confirm:'정말 삭제하시겠습니까?'} %><br>
    <%end%>
<% end %>

<%= form_for [@content, Rate.new] do |f|%>
    <%= f.text_field :title %><br>
    <%= f.text_area :body %>
    <%= f.submit %>
<%end%>
